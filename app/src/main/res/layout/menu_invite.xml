<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_invitecode_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/share_postcard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/text_code"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/postcard" />

    <ImageView
        android:id="@+id/share_text"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/share_postcard"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/text" />

    <ImageView
        android:id="@+id/menu_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/share_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/menu_back" />
</RelativeLayout>
