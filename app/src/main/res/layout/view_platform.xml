<?xml version="1.0" encoding="utf-8"?>
<com.lanslot.fastvideo.Views.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.lanslot.fastvideo.Views.RoundImageView
            android:id="@+id/platform_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            app:radius="10" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/platform_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
</com.lanslot.fastvideo.Views.SquareLayout>
